@model List<Room>

@{
    ViewData["Title"] = "Index";
}
<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 p-0" style="background-image: url(/img/carousel-1.jpg);">
    <div class="container-fluid page-header-inner py-5">
        <div class="container text-center pb-5">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Rooms</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center text-uppercase">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item text-white active" aria-current="page">Rooms</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Page Header End -->

<div class="text-center wow fadeInUp" data-wow-delay="0.1s">
    <h6 class="section-title text-center text-primary text-uppercase">
        Our Rooms
    </h6>
    <h1 class="mb-5">
        Explore Our <span class="text-primary text-uppercase">Rooms</span>
    </h1>
</div>

<!-- Room Start -->
<div class="container-xxl py-5">
    <div class="container">

        <div class="row g-4">
            @foreach (var room in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="room-item shadow rounded overflow-hidden">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(room.Image))
                            {
                                <div style="height:250px">
                                    <img style="height:100%;width:100%;object-fit:cover;object-position:center" class="img-fluid" src="~/images/@room.Image" alt="Room Image" />
                                </div>

                            }
                        </div>
                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <h4 class="">@room.Name</h4>
                                <div class="d-flex align-items-baseline"><h4 class="text-primary">@room.PricePerNight$</h4><span>/Night</span></div>
                            </div>
                            <div class="mb-4">
                                <h5>
                                    <span class="text-primary d-inline">
                                        <a asp-action="Details"
                                           class="text-primary fs-4"
                                           asp-controller="Hotel">@room.Hotel.Name</a>
                                    </span> | <span class="fs-4 text-muted">@room.RoomCategory.Name</span>
                                </h5>
                            </div>

                            <div class="d-flex mb-4">

                                <small class="border-end fs-5 me-3 pe-3"><i class="fa fa-bed text-primary me-2"></i>@room.NumOfBeds Bed</small>
                                <small class="border-end fs-5 me-3 pe-3"><i class="fa fa-bath text-primary me-2"></i> Bath</small>
                                <small><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                            </div>
                            <div class="fs-5">@(room.Description.Length > 80 ? room.Description.Substring(0, 80) + "..." : room.Description)</div>

                            <div class="bg-primary text-center w-100 rounded py-3 mb-4 mt-4 mx-auto">
                                <a asp-action="BookDetails"
                                   class="px-4 text-white"
                                   asp-route-id="@room.Id"
                                   asp-controller="Room">More Details</a>
                                @* <a href="http://localhost:53770/room/bookdetails/@room.Id" class="px-4 text-white">More Details</a> *@
                            </div>
                        </div>
                    </div>
                </div>
            }
            @*        <div class="col-lg-12">
            <div class="room-pagination">
            <a href="#">1</a>
            <a href="#">2</a>
            <a href="#">Next <i class="fa fa-long-arrow-right"></i></a>
            </div>
            </div> *@
        </div>
    </div>
</div>
<!-- Room End -->
