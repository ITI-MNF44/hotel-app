@model hotel_app.ViewModels.RegisterUserViewModel

@{
    ViewData["Title"] = "UserHotelRegister";
}

<div class="container hotel-registration-container">
    <h1 style="text-align:center">Hotel Registration</h1>
    <div class="hotel-registration-row justify-content-center">
        <div class="hotel-registration-col-md-8">
            <form asp-action="UserHotelRegister" method="post" enctype="multipart/form-data">
                <div class="row m-0 p-0">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col-lg-6 col-md-12">
                        <div class="my-0 hotel-registration-form-group">
                            <label asp-for="Name" class="control-label">Hotel Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="my-0 hotel-registration-form-group">
                            <label asp-for="Description" class="mb-2 control-label">Description</label>
                            <textarea asp-for="Description" rows="4" class="form-control" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="my-0 hotel-registration-form-row">
                            <div class="my-0 hotel-registration-form-group col-md-6">
                                <label asp-for="Country" class="control-label">Country</label>
                                <input asp-for="Country" class="form-control" required />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                            <div class="my-0 hotel-registration-form-group col-md-6">
                                <label asp-for="City" class="control-label">City</label>
                                <input asp-for="City" class="form-control" required />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="my-0 hotel-registration-form-group">
                            <label asp-for="Address" class="control-label">Address</label>
                            <input asp-for="Address" class="form-control" required />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="my-0 hotel-registration-form-group">
                            <label asp-for="Image" class="control-label">Image Upload</label>
                            <input asp-for="Image" type="file" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-lg-6 col-md-12">
                        <div class="my-0 hotel-registration-form-group">
                            <label asp-for="StarRating" class="control-label">Star Rating</label>
                            <select asp-for="StarRating" class=" my-0 form-control">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                            <span asp-validation-for="StarRating" class="text-danger"></span>
                        </div>
                        <div class="my-0 hotel-registration-form-group">
                            <label asp-for="Category" class="control-label">Category</label>
                            <select asp-for="Category" class="form-control">
                                <option value="">Select a category</option>
                                @*  @if (Model.Categories != null)
                                { *@
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                                @* } *@
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="my-0 hotel-registration-form-group">
                            <label asp-for="UserName" class="control-label">Username</label>
                            <input asp-for="UserName" class="form-control" required />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="my-0 hotel-registration-form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="my-0 hotel-registration-form-group">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="my-0 hotel-registration-form-group">
                            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="my-0 mw-100 hotel-registration-form-group">
                            <button type="submit" class="mx-auto btn btn-primary">Register</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
