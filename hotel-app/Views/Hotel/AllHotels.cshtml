<div class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">
    <h6 class="section-title text-center text-primary text-uppercase">
        Our Hotels
    </h6>
    <h1 class="mb-5 pb-5">
        Explore Our <span class="text-primary text-uppercase">Hotels</span>
    </h1>
</div>
<!-- hotels Section Begin -->
<section class="">
    <div class="container">
        <div style="display: grid; gap: 20px; grid-template-columns: repeat(auto-fit, minmax(600px, 1fr))">
            @foreach (var hotel in Model)
            {
                <div class="card p-0 rounded border-0 shadow wow fadeInUp" data-wow-delay="0.1s">
                    <div class="position-relative row g-0">
                        <div class="fs-5 position-absolute p-2 rounded-1 bg-primary text-white top-0 text-end float-end end-0" style="max-width: fit-content;">@hotel.StarRating <samall class="fa fa-star fs-6"></samall></div>
                        <div class="col-md-4">

                            @if (!string.IsNullOrEmpty(hotel.Image))
                            {
                                <div style="height:100%">
                                    <img src="~/images/@hotel.Image" class="img-fluid rounded-start" alt="Room Image" style="height:100%;width:100%;object-fit:cover;object-position:center" />
                                </div>
                                @* <img src="~/images/@hotel.Image" class="img-fluid w-100 h-100" alt="@hotel.Name" /> *@
                            }
                        </div>
                        <div class="col-md-8 pe-lg-5">
                            <div class="card-body">
                                <h4 class="card-title text-primary mb-3">
                                    <a href="@Url.Action("HotelProfile", "Hotel", new { id = hotel.Id })" class="text-primary" style="font-size: 18px;">@hotel.Name</a>
                                    <span class="text-muted fs-5"> | @hotel.HotelCategory.Name</span>
                                </h4>
                                <p>@hotel.Country | @hotel.City | @hotel.Address</p>
                                <p class="card-text p-0 m-0"></p>
                                <p class="card-text text-muted" style="height:55px;">@(hotel.Description.Length > 80 ? hotel.Description.Substring(0, 80) + "..." : hotel.Description)</p>
                                <a href="@Url.Action("HotelProfile", "Hotel", new { id = hotel.Id })" class="text-primary text-decoration-underline btn-hover ">MORE DETAILS</a>

                                @*   <ul class="ms-4 my-2 fs-5 text-black-50">
                            @if (hotel.IsAccessible.HasValue && hotel.IsAccessible.Value)
                            {
                            <li>Wheelchair-accessible and facilities</li>
                            }
                            <li>High quality food</li>
                            <li>
                            <a asp-action="HotelProfile"
                            class="text-primary fs-6"
                            asp-route-id="@hotel.Id"
                            asp-controller="Hotel">Show more...</a>
                            </li>
                            </ul> *@
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Hotel Section End -->
